<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="createDialog"
        title="Create Change Request"
        draggable="true"
        resizable="true"
        contentWidth="400px"
    >
        <VBox class="sapUiSmallMargin">
            <Label text="Title"  required="true"/>
            <Input value="{CreateRequestModel>/Title}" />

            <Label text="LandScape" required="true"/>
            <ComboBox
                selectedKey="{CreateRequestModel>/System}"
                placeholder="Select Landscape"
                width="100%"
            >
                <items>
                    <core:Item
                        key="BTP"
                        text="BTP"
                    />
                    <core:Item
                        key="S/4HANA"
                        text="S/4HANA"
                    />
                </items>
            </ComboBox>

            <Label text="Type"  required="true"/>
            <ComboBox
                selectedKey="{CreateRequestModel>/Type}"
                placeholder="Select Type"
                width="100%"
            >
                <items>
                    <core:Item
                        key="Fix"
                        text="Fix"
                    />
                    <core:Item
                        key="Patch"
                        text="Patch"
                    />
                    <core:Item
                        key="Emergency Fix"
                        text="Emergency Fix"
                    />
                    <core:Item
                        key="Release"
                        text="Release"
                    />
                </items>
            </ComboBox>
            <Label
                text="Approver Level"
                visible="{viewModel>/isAdmin}"
                required="true"
            />
            <ComboBox
                visible="{viewModel>/isAdmin}"
                selectedKey="{CreateRequestModel>/ApproverLevel}"
                placeholder="Select Approver Level"
                width="100%"
            >
                <items>
                    <core:Item
                        key="Level 1"
                        text="Level 1"
                    />
                    <core:Item
                        key="Level 2"
                        text="Level 2"
                    />
                    <core:Item
                        key="Level 3"
                        text="Level 3"
                    />
                    <core:Item
                        key="Level 4"
                        text="Level 4"
                    />
                </items>
            </ComboBox>
            <Label text="System" required="true" />
            <ComboBox
                id="groupedComboBox"
                items="{
                    path: 'rolesModel>/Roles',
                    sorter: { path: 'Category', group: true }
                }"
                width="100%"
                selectedKey="{CreateRequestModel>/ApproverSystem}"
                placeholder="Select the System"
            >
                <core:ListItem
                    key="{rolesModel>Key}"
                    text="{rolesModel>Text}"
                />
            </ComboBox>
        </VBox>
        <endButton>
            <Button
                text="Cancel"
                press="onDialogCancel"
            />
        </endButton>
        <beginButton>
            <Button
                text="Submit"
                type="Emphasized"
                press="onDialogSubmit"
            />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
