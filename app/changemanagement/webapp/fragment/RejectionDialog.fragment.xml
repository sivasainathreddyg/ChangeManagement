<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog
        id="rejectionDialog"
        title="Reject Request"
        type="Message"
        draggable="true"
        >
        <VBox class="sapUiSmallMargin">
            <Text text="Please enter the reason for rejection:" />
            <Input id="rejectionCommentInput" liveChange=".onCommentChange" />
        </VBox>
        <beginButton>
            <Button text="Confirm" press=".onConfirmReject" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press=".onCancelReject" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
