<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog title="Rejection Reason" draggable="true" resizable="true">
        <VBox class="sapUiSmallMargin">
            <Text text="Reason:" />
            <TextArea
                value="{rejectionModel>/0/REJECTIONCOMMENT}"
                editable="false"
                width="100%"
                rows="4"
            />
        </VBox>
        <beginButton>
            <Button text="Close" press=".onCloseRejectNoteDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
