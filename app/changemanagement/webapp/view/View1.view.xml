<mvc:View
    controllerName="com.changemanagement.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    displayBlock="true"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage
        id="dynamicPage"
        showFooter="true"
    >
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox
                        alignItems="Center"
                        wrap="Wrap"
                        class="sapUiSmallMargin"
                    >
                        <Title
                            text="Change Management"
                            level="H1"
                        />

                        <!-- Status Tiles beside title -->
                        <HBox
                            justifyContent="Start"
                            class="sapUiTinyMarginBegin"
                        >
                        <VBox >
                            <ObjectNumber
                                number="{counts>/inApproval}"
                                unit="In Approval"
                                emphasized="true"
                                state="Warning"
                                class="sapUiTinyMarginBegin bold"
                                
                            />
                        </VBox>
                            <ObjectNumber
                                number="{counts>/approved}"
                                unit="Approved"
                                emphasized="true"
                                state="Success"
                                class="sapUiTinyMarginBegin bold"
                            />
                            <ObjectNumber
                                number="{counts>/rejected}"
                                unit="Rejected"
                                emphasized="true"
                                state="Error"
                                class="sapUiTinyMarginBegin bold"
                            />
                        </HBox>
                    </HBox>
                </f:heading>

                <f:actions>
                    <HBox
                        alignItems="Center"
                        wrap="Wrap"
                    >
                        <Label text="Dark Mode:" />
                        <Switch
                            state="false"
                            change=".onThemeSwitch"
                            tooltip="Toggle Dark/Light Theme"
                        />

                        <DatePicker
                            id="monthPicker"
                            displayFormat="MMMM yyyy"
                            valueFormat="yyyy-MM-dd"
                            change="onMonthChange"
                            class="sapUiSmallMarginBegin"
                            width="90%"
            
                            
                        />

                        <Button
                            text="Create Request"
                            type="Emphasized"
                            press="onCreateRequest"
                            class="sapUiSmallMarginBegin"
                        />
                        <Button
                            text="Update"
                            id="idupdatebtn"
                            press="onUpdateSelectedRow"
                            enabled="false"
                            type="Emphasized"
                            class="sapUiSmallMarginBegin"
                        />
                    </HBox>
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>

        <f:content>
            <VBox>
                <Title
                    text=""
                    level="H2"
                    class="sapUiSmallMarginBottom"
                />
                <HBox
                    class="sapUiTinyMarginBottom"
                    alignItems="Center"
                    justifyContent="SpaceBetween"
                    wrap="Wrap"
                >
                    <!-- All your filter VBox items go here -->
                    <HBox>
                        <VBox class="sapUiSmallMarginEnd sapUiSmallMarginBegin">
                            <Label text="System" />
                            <Select
                                id="systemFilter"
                                width="10rem"
                                change=".onfilterchange"
                            >
                                <items>
                                    <core:Item
                                        key="All"
                                        text="All"
                                    />
                                    <core:Item
                                        key="BTP"
                                        text="BTP"
                                    />
                                    <core:Item
                                        key="S/4HANA"
                                        text="S/4HANA"
                                    />
                                </items>
                            </Select>
                        </VBox>
                        <VBox class="sapUiSmallMarginEnd">
                            <Label text="Type" />
                            <Select
                                id="typeFilter"
                                width="10rem"
                                change=".onfilterchange"
                            >
                                <items>
                                    <core:Item
                                        key="All"
                                        text="All"
                                    />
                                    <core:Item
                                        key="Fix"
                                        text="Fix"
                                    />
                                    <core:Item
                                        key="Patch"
                                        text="Patch"
                                    />
                                    <core:Item
                                        key="Emergency Fix"
                                        text="Emergency Fix"
                                    />
                                    <core:Item
                                        key="Release"
                                        text="Release"
                                    />
                                </items>
                            </Select>
                        </VBox>
                        <VBox class="sapUiSmallMarginEnd">
                            <Label text="Status" />
                            <Select
                                id="statusFilter"
                                width="10rem"
                                change=".onfilterchange"
                            >
                                <items>
                                    <core:Item
                                        key="All"
                                        text="All"
                                    />
                                    <core:Item
                                        key="In Approval"
                                        text="In Approval"
                                    />
                                    <core:Item
                                        key="Approved"
                                        text="Approved"
                                    />
                                    <core:Item
                                        key="Rejected"
                                        text="Rejected"
                                    />
                                </items>
                            </Select>
                        </VBox>
                        <!-- <VBox class="sapUiSmallMarginEnd">
                            <Label text="Approver Level" />
                            <Select
                                id="approverFilter"
                                width="10rem"
                                change=".onfilterchange"
                            >
                                <items>
                                    <core:Item
                                        key="All"
                                        text="All"
                                    />
                                    <core:Item
                                        key="Level 1"
                                        text="Level 1"
                                    />
                                    <core:Item
                                        key="Level 2"
                                        text="Level 2"
                                    />
                                    <core:Item
                                        key="Testing"
                                        text="Testing"
                                    />
                                </items>
                            </Select>
                        </VBox> -->
                        <!-- <VBox class="sapUiSmallMarginBegin">
                            <Button
                                text="Filter"
                                type="Emphasized"
                                press="onFilter"
                            />
                        </VBox> -->
                    </HBox>

                    <!-- Right side: Select Approver Level -->
                    <HBox
                        visible="{viewModel>/isAdmin}"
                        class="sapUiSmallMarginTop sapUiSmallMarginEnd"
                    >
                        <DateRangeSelection
                            id="idDateRange"
                            displayFormat="yyyy-MM-dd"
                            change="onDateRangeChange"
                            placeholder="select the daterange "
                        />
                        <Button
                            text="Export to Excel"
                            press="onExportToExcel"
                            class="sapUiSmallMarginBegin"
                        />

                        <HBox
                            alignItems="Center"
                            justifyContent="End"
                            class="sapUiSmallMarginBegin"
                        >
                            <Label
                                text="Select Approver Level"
                                class="sapUiSmallMarginEnd"
                                design="Bold"
                            />
                            <ComboBox
                                id="approverLevel"
                                width="15rem"
                                change=".onApproverLevelChange"
                            >
                                <items>
                                    <core:Item
                                        key="Level 1"
                                        text="Level 1"
                                    />
                                    <core:Item
                                        key="Level 2"
                                        text="Level 2"
                                    />
                                    <core:Item
                                        key="Level 3"
                                        text="Level 3"
                                    />
                                    <core:Item
                                        key="Level 4"
                                        text="Level 4"
                                    />
                                </items>
                            </ComboBox>
                        </HBox>
                    </HBox>
                </HBox>

                <Table
                    id="requestTable"
                    items="{tablereqmodel>/}"
                    noDataText="{path: 'viewModel>/isAdmin', formatter: '.getNoDataText'}"
                    mode="SingleSelectLeft"
                    selectionChange="onTableSelectionChange"
                >
                    <columns>
                        <Column
                            hAlign="Center"
                            width="10%"
                        >
                            <Text text="Title" />
                        </Column>
                        <Column
                            demandPopin="true"
                            minScreenWidth="Phone"
                            hAlign="Center"
                        >
                            <Text text="Landscape" />
                        </Column>

                        <Column hAlign="Center">
                            <Text text="Type" />
                        </Column>
                        <Column
                            width="8%"
                            hAlign="Center"
                        >
                            <Text text="Approval System" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="Status" />
                        </Column>
                        <!-- <Column
                            width="5.5%"
                            hAlign="Center"
                        >
                            <Text text="RejectionReason" /> -->
                        <!-- </Column> -->
                        <Column hAlign="Center">
                            <Text text="Approver Level" />
                        </Column>
                        <!-- <Column
                            demandPopin="true"
                            minScreenWidth="Desktop"
                        >
                            <Text text="Validation" />
                        </Column> -->
                        <Column
                            visible="{viewModel>/isAdmin}"
                            hAlign="Center"
                        >
                            <Text
                                text="Download"
                                wrapping="false"
                                class="nowrapText"
                            />
                        </Column>
                        <Column
                            visible="{= ${viewModel>/isApprover} }"
                            demandPopin="true"
                            minScreenWidth="Desktop"
                            width="18%"
                            hAlign="Center"
                        >
                            <Text text="Action" />
                        </Column>

                        <Column hAlign="Center">
                            <Text text="Commit ID" />
                        </Column>
                        <Column hAlign="Center">
                            <Text text="Description" />
                        </Column>
                        <Column
                            hAlign="Center"
                            width="8%"
                        >
                            <Text text="CreatedDate" />
                        </Column>

                        <Column
                            hAlign="Center"
                            width="8%"
                        >
                            <Text text="Approved/Reject Date" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem
                            type="Navigation"
                            press="onRowPress"
                        >
                            <cells>
                                <Text text="{tablereqmodel>TITLE}" />
                                <Text text="{tablereqmodel>SYSTEM}" />
                                <Text text="{tablereqmodel>TYPE}" />
                                <Text text="{tablereqmodel>APPROVERSYSTEM}" />

                                <HBox
                                    justifyContent="Center"
                                    alignItems="Center"
                                >
                                    <ObjectStatus
                                        text="{tablereqmodel>STATUS}"
                                        state="{path:'tablereqmodel>STATUS', formatter: '.getValidationState'}"
                                    />
                                    <Button
                                        icon="sap-icon://notes"
                                        type="Transparent"
                                        tooltip="Reason for reject"
                                        press="onpressrejectnote"
                                        visible="{path:'tablereqmodel>STATUS' ,formatter:'.isIconVisible'}"
                                    />
                                </HBox>
                                <Text
                                    text="{path: 'tablereqmodel>APPROVERLEVEL', formatter: '.getHighestLevel'}"
                                />
                                <!-- <Text text="{ApproverLevel}" /> -->
                                <!-- <Text text="{tablereqmodel>VALIDATION}" /> -->
                                <Button
                                    icon="sap-icon://download"
                                    press="ondownloadFile"
                                />

                                <VBox width="100%">
                                    <HBox
                                        visible="{
                                    parts: [
                                        'tablereqmodel>APPROVERLEVEL',
                                        'tablereqmodel>STATUS',
                                        'viewModel>/userLevel'
                                    ],
                                    formatter: '.isUserAllowedToApprove'
                                }"
                                    >
                                        <Button
                                            text="Approve"
                                            type="Emphasized"
                                            press="onApprove"
                                        />
                                        <Button
                                            text="Reject"
                                            type="Reject"
                                            press="onReject"
                                            class="sapUiTinyMarginBegin"
                                        />

                                        <Button
                                            text="Not Applicable"
                                            type="Emphasized"
                                            press="onNotApplicable"
                                            class="sapUiTinyMarginBegin"
                                        />
                                    </HBox>

                                    <Text
                                        visible="{
                                        parts: [
                                            'tablereqmodel>APPROVERLEVEL',
                                            'tablereqmodel>STATUS',
                                            'viewModel>/userLevel',
                                            'tablereqmodel>NOTAPPLICABLE'
                                        ],
                                        formatter: '.isApprovedTextVisible'
                                    }"
                                        text="{
                                        parts: [
                                            'tablereqmodel>APPROVERLEVEL',
                                            'tablereqmodel>STATUS',
                                            'viewModel>/userLevel',
                                            'tablereqmodel>NOTAPPLICABLE'
                                        ],
                                        formatter: '.getApprovedText'
                                    }"
                                    />
                                </VBox>
                                <Text text="{tablereqmodel>COMMITID}" />
                                <Text
                                    text="{tablereqmodel>DESCRIPTION}"
                                    wrapping="false"
                                    tooltip="{tablereqmodel>DESCRIPTION}"
                                />
                                <Text
                                    text="{path: 'tablereqmodel>CREATEDAT', formatter: '.formatDateOnly'}"
                                />
                                <Text
                                    text="{parts:['tablereqmodel>APPROVEDDATE','tablereqmodel>REJECTEDAT','tablereqmodel>STATUS'], formatter: '.formatDecisionDate'}"
                                />
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </f:content>
    </f:DynamicPage>
</mvc:View>
